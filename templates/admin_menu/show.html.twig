{% extends 'baseAdmin.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ menu.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_menu_index') }}">back to list</a>

    <a href="{{ path('app_admin_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('admin_menu/_delete_form.html.twig') }}
{% endblock %}
