{{ form_start(form) }}
<div class="row">
    <div class="col-md-4 pr-3">
        <h5>Informations generales</h5>
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.surname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.company, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.isVerified) }}
        </div>
    </div>
    <div class="col-md-4 pr-3">
        <h5>Information de livraison</h5>
        <div class="form-group">
            {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.zipcode, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-4 pr-3">
        <h5>Information de Facturation</h5>
        <div class="form-group">
            {{ form_row(form.adressePurchase, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.cityPurchase, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.zipcodePurchase, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.countryPurchase, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phonePurchase, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12 pr-3">
        <hr>
        <div class="form-group">
            <button class="btn btn-primary btn-round">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>


{{ form_end(form) }}
