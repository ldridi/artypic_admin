{% extends 'baseAdmin.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>DateReview</th>
                <td>{{ review.dateReview }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ review.texte }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ review.stars }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ review.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_review_index') }}">back to list</a>

    <a href="{{ path('app_admin_review_edit', {'id': review.id}) }}">edit</a>

    {{ include('admin_review/_delete_form.html.twig') }}
{% endblock %}
