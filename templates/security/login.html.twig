{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="wrapper wrapper-full-page" style="background: #0674E8; height: 100vh!important;overflow: hidden!important;">
        <div class="full-page login-page" data-color="" data-image="../../assets/img/background/background-2.jpg">
            <div class="content">
                <div class="container">
                    <div class="row">

                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    <div class="alert alert-info">Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a></div>
                                </div>
                            {% endif %}
                            <form method="post">
                                <div class="card" data-background="color" data-color="blue">
                                    <div class="card-header">
                                        <h3 class="card-title text-center">Espace Administrateur</h3>
                                    </div>
                                    <br> <br> <br>
                                    <div class="card-content">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-no-border" autocomplete="email" required autofocus>
                                        </div>
                                        <div class="form-group">
                                            <label>Mot de passe</label>
                                            <input type="password" name="password" id="inputPassword" class="form-control input-no-border" autocomplete="current-password" required>
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        </div>
                                        <div class="form-group">
                                            <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me" checked>
                                            <label class="form-check-label" for="rememberMe">Souviens-toi de moi</label>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button class="btn btn-fill btn-wd " type="submit">
                                            Se connecter
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


