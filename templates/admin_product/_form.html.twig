{{ form_start(form) }}
    <div class="row">
        <div class="col-md-4 pr-1">
            <div class="form-group">
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-4 pr-1">
            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.imageHiddenProduct, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-4 pr-1">
            <div class="form-group">
                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-md-4 pr-1">
            <div class="form-group">
                {{ form_row(form.sku, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-8 pr-1">
            <div class="form-group">
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-md-4 pr-1">
            <div class="form-group">
                {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-4 pr-1">
            <div class="form-group">
                {{ form_row(form.tags, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-4 pr-1">
            <div class="form-group" style="margin-top:35px;">
                {{ form_label(form.enabled, 'Afficher les produit sur le site') }}
                <span>&nbsp;&nbsp;&nbsp;</span>
                {{ form_widget(form.enabled) }}
            </div>
        </div>
        <div class="col-md-6 pr-1">
            <div class="form-group">
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </div>


{{ form_end(form) }}
