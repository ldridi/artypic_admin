{% extends 'baseAdmin.html.twig' %}

{% block title %}Modification Product{% endblock %}

{% block body %}
<div class="content">
    <div class="row">
        <div class="col-md-3">
            <div class="card card-user">

                <div class="card-body">
                    <a href="#">
                        <img class=" border-gray" src="{{ asset('uploads/'~product.image) }}" alt="{{ product.title }}">
                        <h5 class="title text-center" style="margin-top:50px;color:#F2877D;">{{ product.title|upper }}</h5>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title" style="color:#EF857D; font-weight: bold">Modification du produit "{{ product.title}}" <a href="{{ path('app_admin_product_index') }}"><button type="button" rel="tooltip" class="btn btn-info btn-icon btn-md " data-original-title="" title="">
                                <i class="fa fa-home"></i>
                            </button></a></h5>
                </div>
                <div class="card-body">
                    {{ include('admin_product/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
                    {{ include('admin_product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
